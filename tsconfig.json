{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "isolatedModules": true,
    "strictNullChecks": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
